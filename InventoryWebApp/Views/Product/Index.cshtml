@model IEnumerable<InventoryWebApp.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a href='@Url.Action("InsertUpdate","Product")' class="btn btn-success">Add New</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.InstanceId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductImageUris)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValidSkus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedTimestamp)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.InstanceId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductImageUris)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ValidSkus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedTimestamp)
        </td>
        <td>
            <a href='@Url.Action("InsertUpdate","Product",new { id = item.InstanceId})' class="btn btn-info">Edit</a>
            <a href='@Url.Action("Delete","Product",new { id = item.InstanceId})' class="btn btn-danger">Delete</a>
        </td>
    </tr>
}

</table>
